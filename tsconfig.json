{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                     
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./",                       
    "removeComments": true,                
    "strict": true,                           
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": [
    "node_modules"
  ]
}
